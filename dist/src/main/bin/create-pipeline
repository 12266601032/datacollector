# resolve links - $0 may be a softlink
PRG="${0}"

run() {
  "${@}"
  ret=$?
  if [ $ret != 0 ]; then
    echo
    echo "Failed!"
    echo
    exit $ret
  fi
}

while [ -h "${PRG}" ]; do
  ls=`ls -ld "${PRG}"`
  link=`expr "$ls" : '.*-> \(.*\)$'`
  if expr "$link" : '/.*' > /dev/null; then
    PRG="$link"
  else
    PRG=`dirname "${PRG}"`/"$link"
  fi
done

BASEDIR=`dirname ${PRG}`
BASEDIR=`cd ${BASEDIR}/..;pwd`

PIPELINE_DIST=${BASEDIR}

PIPELINE_HOME=""
PIPELINE_PORT=""
while test $# -gt 0; do
  case "$1" in
    -home=*)
      PIPELINE_HOME=`echo $1 | sed -e 's/^[^=]*=//g'`
      shift
      ;;
    -port=*)
      PIPELINE_PORT=`echo $1 | sed -e 's/^[^=]*=//g'`
      shift
      ;;
    -help)
      echo "createpipeline -home=<PIPELINE_HOME_DIR> -port=<PIPELINE_HTTP_PORT>"
      echo ""
      exit 0
      ;;
    *)
      echo "Invalid arguments, run 'createpipeline -help'"
      echo ""
      $0 -help
      exit 1
      ;;
  esac
done

if [[ -z "${PIPELINE_HOME}" || -z "${PIPELINE_PORT}" ]]
then
  echo "Missing arguments, run 'createpipeline -help'"
  echo ""
  $0 -help
  exit 1
fi

if [ -d "${PIPELINE_HOME}" ]
then
  echo "Specified home directory must not exist"
  echo ""
  exit 1
fi


run mkdir "${PIPELINE_HOME}"
PIPELINE_HOME=`cd ${PIPELINE_HOME};pwd`

run mkdir "${PIPELINE_HOME}/bin"
run mkdir "${PIPELINE_HOME}/etc"
run sed -e "s|#PIPELINE_HOME#|${PIPELINE_HOME}|" -e "s|#PIPELINE_DIST#|${PIPELINE_DIST}|" \
    < "${PIPELINE_DIST}/bin/_pipeline_prototype" > "${PIPELINE_HOME}/bin/pipeline"
run chmod a+x "${PIPELINE_HOME}/bin/pipeline"
run cp "${PIPELINE_DIST}/etc/log4j.properties" "${PIPELINE_HOME}/etc"
run sed -e "s|http.port=8080|http.port=${PIPELINE_PORT}|" \
    < "${PIPELINE_DIST}/etc/pipeline.properties" > "${PIPELINE_HOME}/etc/pipeline.properties"

echo ""
echo "New pipeline created at ${PIPELINE_HOME} on port ${PIPELINE_PORT}"
echo ""
echo "Use '${PIPELINE_HOME}/bin/pipeline' to run the new pipeline"
echo ""
exit 0
