#!/bin/bash
#
# (c) 2014 StreamSets, Inc. All rights reserved. May not
# be copied, modified, or distributed in whole or part without
# written consent of StreamSets, Inc.
#

# resolve links - $0 may be a softlink
PRG="${0}"

run() {
  "${@}"
  ret=$?
  if [ $ret != 0 ]; then
    echo
    echo "Failed!"
    echo
    exit $ret
  fi
}

while [ -h "${PRG}" ]; do
  ls=`ls -ld "${PRG}"`
  link=`expr "$ls" : '.*-> \(.*\)$'`
  if expr "$link" : '/.*' > /dev/null; then
    PRG="$link"
  else
    PRG=`dirname "${PRG}"`/"$link"
  fi
done

BASEDIR=`dirname ${PRG}`
BASEDIR=`cd ${BASEDIR}/..;pwd`

SDC_DIST=${BASEDIR}

SDC_HOME=""
SDC_HTTP_PORT=""
SDC_HTTPS_PORT=""
while test $# -gt 0; do
  case "$1" in
    -home=*)
      SDC_HOME=`echo $1 | sed -e 's/^[^=]*=//g'`
      shift
      ;;
    -httpPort=*)
      SDC_HTTP_PORT=`echo $1 | sed -e 's/^[^=]*=//g'`
      shift
      ;;
    -httpsPort=*)
      SDC_HTTPS_PORT=`echo $1 | sed -e 's/^[^=]*=//g'`
      shift
      ;;
    -help)
      echo "create-sdc -home=<SDC_HOME_DIR> (-httpPort=<SDC_HTTP_PORT> | -httpsPort=<SDC_HTTPS_PORT>)"
      echo ""
      echo "  The <SDC_HOME_DIR> directory must not exist."
      echo ""
      exit 0
      ;;
    *)
      echo "Invalid arguments, run 'createsdc -help'"
      echo ""
      $0 -help
      exit 1
      ;;
  esac
done

if [[ -z "${SDC_HOME}" ]]
then
  echo "Missing arguments, run 'createsdc -help'"
  echo ""
  $0 -help
  exit 1
fi

if [[ -z "${SDC_HTTP_PORT}" && -z "${SDC_HTTPS_PORT}" ]]
then
  echo "Missing arguments, run 'createsdc -help'"
  echo ""
  $0 -help
  exit 1
fi

if [ -d "${SDC_HOME}" ]
then
  echo "Specified home directory must not exist"
  echo ""
  exit 1
fi

SDC_HTTP_PORT=${SDC_HTTP_PORT:="0"}
SDC_HTTPS_PORT=${SDC_HTTPS_PORT:="0"}


run mkdir "${SDC_HOME}"
SDC_HOME=`cd ${SDC_HOME};pwd`

run mkdir "${SDC_HOME}/bin"
run mkdir "${SDC_HOME}/etc"
run mkdir "${SDC_HOME}/libexec"
run sed -e "s|#SDC_HOME#|${SDC_HOME}|" -e "s|#SDC_DIST#|${SDC_DIST}|" \
    < "${SDC_DIST}/bin/_sdc_prototype" > "${SDC_HOME}/bin/sdc"

run echo "#!/bin/bash" > "${SDC_HOME}/bin/sdc"
run echo "#" >> "${SDC_HOME}/bin/sdc"
run echo "# (c) 2014 StreamSets, Inc. All rights reserved. May not" >> "${SDC_HOME}/bin/sdc"
run echo "# be copied, modified, or distributed in whole or part without" >> "${SDC_HOME}/bin/sdc"
run echo "# written consent of StreamSets, Inc." >> "${SDC_HOME}/bin/sdc"
run echo "#" >> "${SDC_HOME}/bin/sdc"
run echo "" >> "${SDC_HOME}/bin/sdc"
run echo "export SDC_HOME=${SDC_HOME}" >> "${SDC_HOME}/bin/sdc"
run echo "exec ${SDC_DIST}/bin/sdc" >> "${SDC_HOME}/bin/sdc"
run echo "" >> "${SDC_HOME}/bin/sdc"


run chmod a+x "${SDC_HOME}/bin/sdc"
run cp -r -p "${SDC_DIST}/etc/"* "${SDC_HOME}/etc/"
run cp -r -p "${SDC_DIST}/libexec/"* "${SDC_HOME}/libexec/"
run rm "${SDC_HOME}/etc/sdc.properties"

SED_OPTIONS=""
if [ -n "${SDC_HTTP_PORT}" ]
then
  SED_OPTIONS="-e s|http.port=.*$|http.port=${SDC_HTTP_PORT}|"
fi

if [ -n "${SDC_HTTPS_PORT}" ]
then
  SED_OPTIONS="${SED_OPTIONS} -e s|https.port=.*$|https.port=${SDC_HTTPS_PORT}|"
fi

run sed ${SED_OPTIONS} < "${SDC_DIST}/etc/sdc.properties" > "${SDC_HOME}/etc/sdc.properties"

echo ""
echo "New sdc created at ${SDC_HOME} on HTTP port ${SDC_HTTP_PORT} and HTTPS port ${SDC_HTTPS_PORT}"
echo ""
echo "Use '${SDC_HOME}/bin/sdc' to run the new sdc"
echo ""
exit 0
