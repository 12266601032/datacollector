#!/bin/bash
#
# (c) 2014 StreamSets, Inc. All rights reserved. May not
# be copied, modified, or distributed in whole or part without
# written consent of StreamSets, Inc.
#

# resolve links - $0 may be a softlink
PRG="${0}"

while [ -h "${PRG}" ]; do
ls=`ls -ld "${PRG}"`
link=`expr "$ls" : '.*-> \(.*\)$'`
if expr "$link" : '/.*' > /dev/null; then
PRG="$link"
else
PRG=`dirname "${PRG}"`/"$link"
fi
done

BASEDIR=`dirname ${PRG}`
BASEDIR=`cd ${BASEDIR}/..;pwd`

PIPELINE_DIST=${BASEDIR}

PIPELINE_HOME=${PIPELINE_HOME:=${PIPELINE_DIST}}

if [ -f ${PIPELINE_HOME}/libexec/pipeline-env.sh ]
then
source ${PIPELINE_HOME}/libexec/pipeline-env.sh
fi

PIPELINE_CONF=${PIPELINE_CONF:=${PIPELINE_HOME}/etc}
PIPELINE_DATA=${PIPELINE_DATA:=${PIPELINE_HOME}/data}
PIPELINE_LOG=${PIPELINE_LOG:=${PIPELINE_HOME}/log}
PIPELINE_JAVA_OPTS=${PIPELINE_JAVA_OPTS:="-Xmx1024m"}
PIPELINE_MAIN_CLASS=${PIPELINE_MAIN_CLASS:="com.streamsets.pipeline.main.Main"}

PIPELINE_JAVA_OPTS="${PIPELINE_JAVA_OPTS} -Dpipeline.conf.dir=${PIPELINE_CONF}"
PIPELINE_JAVA_OPTS="${PIPELINE_JAVA_OPTS} -Dpipeline.data.dir=${PIPELINE_DATA}"
PIPELINE_JAVA_OPTS="${PIPELINE_JAVA_OPTS} -Dpipeline.log.dir=${PIPELINE_LOG}"

BOOTSTRAP_CLASSPATH="${PIPELINE_DIST}/bin/streamsets-pipeline-bootstrap-${project.version}.jar"

API_CLASSPATH="${PIPELINE_DIST}/api-lib/"'*.jar'

if [ ! -z "${PIPELINE_PRE_CLASSPATH}" ]
then
  PIPELINE_PRE_CLASSPATH="${PIPELINE_PRE_CLASSPATH}:"
fi
if [ ! -z "${PIPELINE_POST_CLASSPATH}" ]
then
  PIPELINE_POST_CLASSPATH=":${PIPELINE_POST_CLASSPATH}"
fi

CONTAINER_CLASSPATH="${PIPELINE_CONF}:${PIPELINE_DIST}/container-lib/"'*.jar'
CONTAINER_CLASSPATH="${PIPELINE_PRE_CLASSPATH}${CONTAINER_CLASSPATH}${PIPELINE_POST_CLASSPATH}"

STAGE_LIBRARIES_DIR="${PIPELINE_HOME}/stage-libs"
if [ ! -d "${STAGES_LIBRARY_DIR}" ]
then
  STAGE_LIBRARIES_DIR="${PIPELINE_DIST}/stage-libs"
fi

if [ "$1" = "-verbose" ];
then
echo "Pipeline Agent:"
echo "  DIST               : ${PIPELINE_DIST}"
echo "  HOME               : ${PIPELINE_HOME}"
echo "  CONF               : ${PIPELINE_CONF}"
echo "  DATA               : ${PIPELINE_DATA}"
echo "  LOG                : ${PIPELINE_LOG}"
echo "  JAVA PATH          : `which java`"
echo "  BOOTSTRAP_CLASSPATH: ${BOOTSTRAP_CLASSPATH}"
echo "  API_CLASSPATH      : ${API_CLASSPATH}"
echo "  CONTAINER_CLASSPATH: ${CONTAINER_CLASSPATH}"
echo "  STAGE_LIBRARIES_DIR: ${STAGE_LIBRARIES_DIR}"
echo "  JAVA OPTS          : ${PIPELINE_JAVA_OPTS}"
echo "  MAIN CLASS         : ${PIPELINE_MAIN_CLASS}"
fi

cd ${PIPELINE_DIST}

exec java -classpath ${BOOTSTRAP_CLASSPATH} ${PIPELINE_JAVA_OPTS} com.streamsets.pipeline.BootstrapMain \
-mainClass ${PIPELINE_MAIN_CLASS} -apiClasspath "${API_CLASSPATH}" -containerClasspath "${CONTAINER_CLASSPATH}" \
-stageLibrariesDir "${STAGE_LIBRARIES_DIR}"
status=$?
echo "Exit: $status"
exit $status
