<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.streamsets</groupId>
    <artifactId>streamsets-root</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <relativePath>../root</relativePath>
  </parent>
  <groupId>com.streamsets</groupId>
  <artifactId>streamsets-pipeline-dist</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <description>StreamSets Pipeline Distribution</description>
  <name>StreamSets Pipeline Dist</name>
  <packaging>jar</packaging>

  <properties>
    <!-- trick to avoid pulling UI files if the 'ui' profile is not active -->
    <ui.dist-dir>${basedir}/src/main/emptydir</ui.dist-dir>
  </properties>

  <dependencies>
    <dependency>
      <groupId>com.streamsets</groupId>
      <artifactId>streamsets-pipeline-api</artifactId>
    </dependency>
    <dependency>
      <groupId>com.streamsets</groupId>
      <artifactId>streamsets-pipeline-container</artifactId>
    </dependency>
    <dependency>
      <groupId>com.streamsets</groupId>
      <artifactId>streamsets-pipeline-stage-lib</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>dist</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <appendAssemblyId>false</appendAssemblyId>
              <attach>false</attach>
              <finalName>streamsets-pipeline-${project.version}</finalName>
              <descriptors>
                <descriptor>src/main/assemblies/pipeline.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>ui</id>
      <properties>
        <ui.dist-dir>${basedir}/../ui/src/main/webapp/dist</ui.dist-dir>
      </properties>
      <dependencies>
        <dependency>
          <groupId>com.streamsets</groupId>
          <artifactId>streamsets-pipeline-ui</artifactId>
        </dependency>
      </dependencies>
    </profile>
  </profiles>
</project>
