<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.streamsets</groupId>
    <artifactId>streamsets-root</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <relativePath>../root</relativePath>
  </parent>
  <groupId>com.streamsets</groupId>
  <artifactId>streamsets-pipeline-dist</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <description>StreamSets Pipeline Distribution</description>
  <name>StreamSets Pipeline Dist</name>
  <packaging>jar</packaging>

  <properties>
    <!-- trick to avoid pulling UI files if the 'ui' profile is not active -->
    <ui.dist-dir>${basedir}/src/main/emptydir</ui.dist-dir>
  </properties>

  <dependencies>
    <dependency>
      <groupId>com.streamsets</groupId>
      <artifactId>streamsets-pipeline-api</artifactId>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.streamsets</groupId>
      <artifactId>streamsets-pipeline-container</artifactId>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.streamsets</groupId>
      <artifactId>streamsets-pipeline-bootstrap</artifactId>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.streamsets</groupId>
      <artifactId>streamsets-pipeline-stage-lib</artifactId>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.streamsets</groupId>
      <artifactId>streamsets-pipeline-sdk</artifactId>
      <scope>compile</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>dist</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <appendAssemblyId>false</appendAssemblyId>
              <attach>false</attach>
              <finalName>streamsets-pipeline-${project.version}</finalName>
              <descriptors>
                <descriptor>src/main/assemblies/pipeline.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>ui</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <properties>
        <ui.dist-dir>${basedir}/../ui/target/dist</ui.dist-dir>
      </properties>
      <dependencies>
        <dependency>
          <groupId>com.streamsets</groupId>
          <artifactId>streamsets-pipeline-ui</artifactId>
          <scope>compile</scope>
        </dependency>
      </dependencies>
    </profile>
    <profile>
      <id>docs</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-javadoc-plugin</artifactId>
            <version>2.10.1</version>
            <executions>
              <execution>
                <id>javadoc</id>
                <phase>prepare-package</phase>
                <goals>
                  <goal>javadoc</goal>
                </goals>
                <configuration>
                  <linksource>false</linksource>
                  <quiet>true</quiet>
                  <verbose>false</verbose>
                  <charset>UTF-8</charset>

                  <excludePackageNames>com.streamsets.pipeline.container:com.streamsets.pipeline.lib:com.streamsets.pipeline.sdk.annotationsprocessor</excludePackageNames>

                  <groups>
                    <group>
                      <title>Pipeline API</title>
                      <packages>
                        com.streamsets.pipeline.api:com.streamsets.pipeline.api.base
                      </packages>
                    </group>
                    <group>
                      <title>Pipeline Stage Library</title>
                      <packages>
                        com.streamsets.pipeline.lib.*
                      </packages>
                    </group>
                    <group>
                      <title>Pipeline Stage SDK API</title>
                      <packages>
                        com.streamsets.pipeline.sdk
                      </packages>
                    </group>
                  </groups>

                  <includeDependencySources>true</includeDependencySources>
                  <dependencySourceIncludes>
                    <dependencySourceInclude>com.streamsets:streamsets-pipeline-api</dependencySourceInclude>
                    <dependencySourceInclude>com.streamsets:streamsets-pipeline-stage-lib</dependencySourceInclude>
                    <dependencySourceInclude>com.streamsets:streamsets-pipeline-sdk</dependencySourceInclude>
                  </dependencySourceIncludes>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
