          <artifactId>streamsets-datacollector-cassandra_2_1_5-lib</artifactId>
          <scope>provided</scope>
        </dependency>
      </dependencies>
    </profile>
    <profile>
      <id>ui</id>
      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>release</name>
        </property>
      </activation>
      <properties>
        <!-- trick to avoid pulling UI files if the 'ui' profile is not active -->
