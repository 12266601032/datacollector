<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.streamsets</groupId>
  <artifactId>streamsets-datacollector</artifactId>
  <version>1.0.0b2-SNAPSHOT</version>
  <description>StreamSets Data Collector</description>
  <name>StreamSets Data Collector</name>
  <packaging>pom</packaging>

  <organization>
    <name>StreamSets</name>
    <url>http://www.streamsets.com</url>
  </organization>

  <licenses>
    <license>
      <name>(c) 2014 StreamSets, Inc. All rights reserved.</name>
      <comments>
        (c) 2014 StreamSets, Inc. All rights reserved. May not be copied, modified,
        or distributed in whole or part without written consent of StreamSets, Inc.
      </comments>
      <url>http://www.streamsets.com</url>
    </license>
  </licenses>

  <properties>
    <cdh_5_2_1-lib>none</cdh_5_2_1-lib>
    <cdh_5_2_2-lib>none</cdh_5_2_2-lib>
    <cdh_5_2_3-lib>none</cdh_5_2_3-lib>
    <cdh_5_2_4-lib>none</cdh_5_2_4-lib>
    <cdh_5_3_0-lib>none</cdh_5_3_0-lib>
    <cdh_5_3_1-lib>none</cdh_5_3_1-lib>
    <cdh_5_3_2-lib>cdh5_3_2-lib</cdh_5_3_2-lib>
    <hdp_2_2_0-lib>hdp_2_2_0-lib</hdp_2_2_0-lib>
    <cdh5-kafka_0_8_2_0_kafka_1_2_0-lib>cdh5-kafka_0_8_2_0_kafka_1_2_0-lib</cdh5-kafka_0_8_2_0_kafka_1_2_0-lib>
    <apache-kafka_0_8_1_1-lib>none</apache-kafka_0_8_1_1-lib>
    <apache-kafka_0_8_2_0-lib>none</apache-kafka_0_8_2_0-lib>
    <apache-kafka_0_8_2_1-lib>none</apache-kafka_0_8_2_1-lib>
    <jython_2_7_b2-lib>jython_2_7_b2-lib</jython_2_7_b2-lib>
    <elasticsearch_1_4_4-lib>none</elasticsearch_1_4_4-lib>
    <elasticsearch_1_5_0-lib>elasticsearch_1_5_0-lib</elasticsearch_1_5_0-lib>
    <apache-flume_1_5_0-lib>apache-flume_1_5_0-lib</apache-flume_1_5_0-lib>
    <cassandra_2_1_5-lib>cassandra_2_1_5-lib</cassandra_2_1_5-lib>
  </properties>

  <modules>
    <module>rbgen-maven-plugin</module>
    <module>root-proto</module>
    <module>root</module>

    <module>bootstrap</module>
    <module>api</module>
    <module>common</module>
    <module>container-common</module>
    <module>container</module>

    <module>sdk</module>
    <module>sdk-test</module>

    <module>root-lib</module>

    <module>commonlib</module>

    <module>dev-lib</module>

    <module>basic-lib</module>

    <module>hdfs-protolib</module>
    <module>cdh5_3_2-lib</module>
    <module>hdp_2_2_0-lib</module>

    <module>kafka-protolib</module>
    <module>cdh5-kafka_0_8_2_0_kafka_1_2_0-lib</module>

    <module>jython-protolib</module>
    <module>jython_2_7_b2-lib</module>

    <module>elasticsearch-protolib</module>
    <module>elasticsearch_1_5_0-lib</module>

    <module>solr-protolib</module>

    <module>cassandra-protolib</module>
    <module>cassandra_2_1_5-lib</module>

    <module>flume-protolib</module>
    <module>apache-flume_1_5_0-lib</module>

    <module>hbase-protolib</module>
    <module>spark-protolib</module>
    <module>spark_1_3_0-lib</module>
    <module>spark-bootstrap</module>
  </modules>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <version>2.8.2</version>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.rat</groupId>
        <artifactId>apache-rat-plugin</artifactId>
        <version>0.8</version>
        <configuration>
          <excludeSubProjects>false</excludeSubProjects>
          <excludes>
            <exclude>.idea/**</exclude>
            <exclude>**/*.iml</exclude>
            <exclude>.gitignore</exclude>
            <exclude>**/*.json</exclude>
            <exclude>**/target/**</exclude>
            <exclude>.git/**</exclude>
            <exclude>**/META-INF/services/**</exclude>
            <exclude>**/.empty</exclude>
            <exclude>sdk/src/main/services/**</exclude>

            <!--TODO check with Madhu on all this stuff -->
            <exclude>ui/**</exclude>

            <!-- For Cloudera service descriptor -->
            <exclude>csd/**</exclude>
          </excludes>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>ui</id>
      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>release</name>
        </property>
      </activation>
      <modules>
        <module>datacollector-ui</module>
      </modules>
    </profile>
    <profile>
      <id>docs</id>
      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>release</name>
        </property>
      </activation>
      <modules>
        <module>docs</module>
      </modules>
    </profile>
    <profile>
      <id>cloudera</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <modules>
        <module>cloudera-integration</module>
      </modules>
    </profile>
    <profile>
      <id>dist</id>
      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>release</name>
        </property>
      </activation>
      <modules>
        <module>dist</module>
      </modules>
    </profile>
    <profile>
      <id>release</id>
      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>release</name>
        </property>
      </activation>
      <modules>
        <module>release</module>
      </modules>
    </profile>
    <profile>
      <id>rpm</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <modules>
        <module>rpm</module>
      </modules>
    </profile>
    <profile>
      <id>template-lib</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <modules>
        <module>template-lib</module>
      </modules>
    </profile>
    <profile>
      <id>all-libs</id>
      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>release</name>
        </property>
      </activation>
      <properties>
        <cdh_5_2_1-lib>cdh5_2_1-lib</cdh_5_2_1-lib>
        <cdh_5_2_2-lib>cdh5_2_2-lib</cdh_5_2_2-lib>
        <cdh_5_2_3-lib>cdh5_2_3-lib</cdh_5_2_3-lib>
        <cdh_5_2_4-lib>cdh5_2_4-lib</cdh_5_2_4-lib>
        <cdh_5_3_0-lib>cdh5_3_0-lib</cdh_5_3_0-lib>
        <cdh_5_3_1-lib>cdh5_3_1-lib</cdh_5_3_1-lib>
        <apache-kafka_0_8_1_1-lib>apache-kafka_0_8_1_1-lib</apache-kafka_0_8_1_1-lib>
        <apache-kafka_0_8_2_0-lib>apache-kafka_0_8_2_0-lib</apache-kafka_0_8_2_0-lib>
        <apache-kafka_0_8_2_1-lib>apache-kafka_0_8_2_1-lib</apache-kafka_0_8_2_1-lib>
        <elasticsearch_1_4_4-lib>elasticsearch_1_4_4-lib</elasticsearch_1_4_4-lib>
      </properties>
      <modules>
        <module>cdh5_2_1-lib</module>
        <module>cdh5_2_2-lib</module>
        <module>cdh5_2_3-lib</module>
        <module>cdh5_2_4-lib</module>
        <module>cdh5_3_0-lib</module>
        <module>cdh5_3_1-lib</module>
        <module>apache-kafka_0_8_1_1-lib</module>
        <module>apache-kafka_0_8_2_0-lib</module>
        <module>apache-kafka_0_8_2_1-lib</module>
        <module>elasticsearch_1_4_4-lib</module>
      </modules>
    </profile>
  </profiles>

</project>
