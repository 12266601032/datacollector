<assembly>
  <id>sdc</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>

    <!-- LICENSE, NOTICE, README, etc -->
    <fileSet>
      <directory>src/main/release-files</directory>
      <outputDirectory>/streamsets-datacollector-${project.version}</outputDirectory>
    </fileSet>

    <!-- SDC -->
    <fileSet>
      <directory>${basedir}/../dist/target/streamsets-datacollector-${project.version}</directory>
      <outputDirectory>/</outputDirectory>
      <excludes>
        <exclude>streamsets-datacollector-${project.version}/streamsets-libs/**</exclude>
        <exclude>streamsets-datacollector-${project.version}/user-libs/**</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../dist/target/streamsets-datacollector-${project.version}</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>streamsets-datacollector-${project.version}/streamsets-libs/streamsets-datacollector-basic-lib/**</include>
      </includes>
    </fileSet>
    <!-- Create an empty user-libs -->
    <fileSet>
      <directory>${basedir}/../dist/src/main/emptydir</directory>
      <outputDirectory>streamsets-datacollector-${project.version}/user-libs</outputDirectory>
    </fileSet>
  </fileSets>

</assembly>
